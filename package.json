{
  "name": "onlinesales-vs-plugin",
  "displayName": "OnlineSales CMS",
  "description": "Edit and publish contents of your website with the full power of VSCode and Copilot.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "onlinesales-vs-plugin.initializeWorkspace",
        "title": "OnlineSales: Initialize Workspace"
      },
      {
        "command": "onlinesales-vs-plugin.authenticate",
        "title": "OnlineSales: Authenticate"
      },
      {
        "command": "onlinesales-vs-plugin.pullContent",
        "title": "OnlineSales: Pull Content"
      },
      {
        "command": "onlinesales-vs-plugin.newContent",
        "title": "OnlineSales: New Content"
      },
      {
        "command": "onlinesales-vs-plugin.pushContent",
        "title": "OnlineSales: Push Content"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/fs-extra": "^11.0.4",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "fs-extra": "^11.2.0",
    "yaml": "^2.4.0"
  }
}
